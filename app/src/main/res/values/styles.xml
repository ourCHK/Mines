<resources>

    <!-- Base application theme. -->
    <style gamePlayer="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item gamePlayer="colorPrimary">@color/colorPrimary</item>
        <item gamePlayer="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item gamePlayer="colorAccent">@color/colorAccent</item>
    </style>

    <style gamePlayer="Custom_Dialog_Style" parent="@android:style/Theme.Dialog">
        <!--窗口背景色透明-->
        <item gamePlayer="android:windowBackground">@android:color/transparent</item>
        <!--<iplayerNamename="android:windowContentOverlay">@null</item>-->
        <!--是否浮在界面上-->
        <item gamePlayer="android:windowIsFloating">true</item>
        <item gamePlayer="android:windowFrame">@null</item>
        <!-- 是否允许背景变暗 --> <!--背景是否模糊显示-->
        <item gamePlayer="android:backgroundDimEnabled">true</item>
        <!--是否有标题-->
        <item gamePlayer="android:windowNoTitle">true</item>
        <!--是否半透明-->
        <item gamePlayer="android:windowIsTranslucent">false</item>
    </style>

    <style gamePlayer="Waiting_Dialog_Style" parent="@android:style/Theme.Dialog">
        <!--窗口背景色透明-->
        <item gamePlayer="android:windowBackground">@android:color/transparent</item>
        <item gamePlayer="android:windowContentOverlay">@null</item>
        <!--是否浮在界面上-->
        <item gamePlayer="android:windowIsFloating">true</item>
        <item gamePlayer="android:windowFrame">@null</item>
        <!-- 是否允许背景变暗 --> <!--背景是否模糊显示-->
        <item gamePlayer="android:backgroundDimEnabled">false</item>
        <!--是否有标题-->
        <item gamePlayer="android:windowNoTitle">true</item>
        <!--是否半透明-->
        <item gamePlayer="android:windowIsTranslucent">true</item>
    </style>

</resources>
